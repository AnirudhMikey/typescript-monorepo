{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/src/*"],
      "types/*": ["../types/src/*"]
    },
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared" },
    { "path": "../types" }
  ]
} 